rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/platformAdmins/$(request.auth.uid));
    }

    // --- Match Rules ---

    match /platformAdmins/{adminId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /lootboxRegistry/main {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();

      match /lootboxMetas/{lootboxId} {
        allow get, list: if true;
        allow create: if isAdmin() || request.resource.data.creator == request.auth.uid;
        allow update, delete: if isAdmin() || (resource != null && resource.data.creator == request.auth.uid);
      }
    }

    match /lootboxes/{lootboxId} {
      allow get, list: if resource.data.isActive == true || isAdmin() || resource.data.admin == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.admin == request.auth.uid;
      allow update: if (isAdmin() || resource.data.admin == request.auth.uid) && request.resource.data.admin == resource.data.admin;
      allow delete: if isAdmin() || (resource != null && resource.data.admin == request.auth.uid);
    }

    match /users/{userId}/userProgress/{lootboxId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.user == userId;
      allow update: if isOwner(userId) && request.resource.data.user == userId;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Discovery index for listed NFTs.
     * @path /nfts/{nftId}
     * @allow read: public; write: authenticated users (to sync their own listings).
     */
    match /nfts/{nftId} {
      allow get, list: if true;
      // Allow authenticated users to create/update/delete listings
      // In a production app, we would verify the 'seller' matches request.auth.uid
      allow create, update, delete: if isSignedIn();
    }

    match /creatorLootboxMappings/{creatorAddress} {
      allow get, list: if true;
      allow create: if isOwner(creatorAddress) || isAdmin();
      allow update: if (isOwner(creatorAddress) || isAdmin());
      allow delete: if isAdmin();
    }

  }
}